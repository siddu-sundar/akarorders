<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<TextView
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:text="Send transport LR number"
    android:id="@+id/textmain"></TextView>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="type LR number"
        android:id="@+id/lrnumber"></EditText>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="number of boxes"
        android:id="@+id/boxes"></EditText>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Cancel"
            android:id="@+id/cancel"></Button>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Send"
            android:id="@+id/sendlr"></Button>
    </LinearLayout>
</LinearLayout>